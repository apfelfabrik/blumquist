{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "address": {
      "type": "object",
      "properties": {
        "street_address": { "type": "string" },
        "city":           { "type": "string" },
        "state":          { "type": ["string", "null"] }
      },
      "required": ["street_address", "city", "state"]
    }
  },

  "type": "object",

  "properties": {
    "name": { "type": "string" },
    "phone_numbers": {
      "type": "array",
      "items": [{ "type": "number" }]
    },
    "current_address": { "$ref": "#/definitions/address" },
    "old_addresses": {
      "type": "array",
      "items": [{ "$ref": "#/definitions/address"}]
    }
  }
}
